# -*- mode: conf -*-

[push]
    default = simple
[alias]
    ci = commit --verbose
    cip = commit --verbose -p
    a = commit --amend -p --verbose
    co = checkout
    b = branch -vv
    l = log --graph --pretty=format:'%w(100,0,10)%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -20
    ll = !sh -c \"git l --all -10000 $@\"
    d = diff
    dd = diff --cached
    s = status
    ri = rebase -i --autosquash
    rc = rebase --cont
    rz = !sh -c 'git reset --soft HEAD^ && git reset HEAD .'
    fixup = commit --fixup
    up = !sh -c 'git co -b tmp && git fetch -v origin master:master && git remote -v prune origin && git co - && git branch -d tmp'
    upr = !sh -c 'git co -b tmp && git fetch -v origin release:release && git remote -v prune origin && git co - && git branch -d tmp'
    rao = !sh -c \"git remote add origin $@\"
    rso = !sh -c \"git remote set-url origin $@\"
    rv = remote -v
    bm = branch -vv --merged
    brm = branch -rvv --merged
[core]
    pager = less -FRX
    editor = ~/Applications/Emacs.app/Contents/MacOS/Emacs -nw --no-desktop
    abbrev = 4
    excludesfile = ~/.gitignore_global
[rebase]
    autostash = true
[rerere]
    enabled = true
[credential]
    helper = osxkeychain
[user]
    name = Hao Lian
    email = hi@haolian.org
[include]
    path = ~/.gitconfig.local
[diff]
    renames = copies
	mnemonicPrefix = true
    autosetupmerge = true
[merge]
    stat = true
[url "https://github.com/"]
  insteadOf = "g:"
[url "git@github.com:hlian"]
  insteadOf = "f:"
