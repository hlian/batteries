# -*- mode: conf -*-

[push]
	default = current
[alias]
	ci = commit --verbose
	co = checkout
	b = branch -vv
	l = log --graph --pretty=format:'%w(100,0,10)%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -20
	ll = !sh -c 'git l --all $@'
	d = diff
	dd = diff --cached
	s = status
	pd = !sh -c 'git branch -d $0 && git push origin :$0'
    a = commit --amend
    ri = rebase -i
    rc = rebase --cont
    rz = !sh -c 'git reset --soft HEAD^ && git reset HEAD .'
    up = !sh -c 'git fetch && git remote prune origin'
[core]
	pager = less -FRX
	editor = vim
	abbrev = 4
	excludesfile = ~/.gitignore_global
[include]
	path = ~/.gitconfig.local
[rerere]
	enabled = true
[credential]
	helper = osxkeychain
[user]
	name = Hao Lian
	email = me@haolian.org
[url "https://github.com/"]
  insteadOf = "g:"
